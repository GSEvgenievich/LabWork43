<Window x:Class="Task3._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3._1"
        xmlns:conv="clr-namespace:Task3._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeChanged="Window_SizeChanged">
    <Window.Resources>
        <conv:HalfWidthConverter x:Key="HalfWidthConverter"/>
        <conv:HalfWidthConverter x:Key="BottomOffsetConverter"/>
    </Window.Resources>
    <Canvas x:Name="FieldCanvas" Height="430" Width="800" SizeChanged="FieldCanvas_SizeChanged">
        <Rectangle x:Name="racketRectangle" Width="100" Height="15" Fill="Aqua" Canvas.Left="350" Canvas.Top="415"/>
    </Canvas>
</Window>
